<Window
    x:Class="RLMod.Core.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ValueConverters;assembly=ValueConverters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RLMod.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="RLMod"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">

    <Window.Resources>
        <converters:BoolInverter x:Key="BoolInverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock
                Margin="4,0"
                VerticalAlignment="Center"
                Text="游戏目录" />
            <TextBox
                MinWidth="120"
                VerticalAlignment="Top"
                IsReadOnly="True"
                Text="{Binding GameRootPath, Mode=OneWay}" />
            <Button
                Margin="4,0"
                Command="{Binding SelectGameRootPathCommand}"
                Content="选择游戏根目录" />
        </StackPanel>

        <!-- <StackPanel Margin="0,4,0,0" Grid.Row="1" Orientation="Horizontal"> -->
        <!--     <TextBlock Margin="4,0" Text="输出目录"></TextBlock> -->
        <!--  <TextBox  -->
        <!--  IsReadOnly="True"  -->
        <!--  MinWidth="120"  -->
        <!--  Text="{Binding OutputPath}"  -->
        <!--  VerticalAlignment="Top" />  -->
        <!-- </StackPanel> -->

        <StackPanel
            Grid.Row="1"
            Margin="0,4"
            Orientation="Horizontal">
            <TextBlock
                Margin="4,0"
                VerticalAlignment="Center"
                Text="生成国家数量" />
            <ui:NumberBox
                Minimum="1"
                SpinButtonPlacementMode="Compact"
                Value="{Binding GenerateCountryCount, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Margin="0,4"
            Orientation="Horizontal">
            <TextBlock
                Margin="4,0"
                VerticalAlignment="Center"
                Text="种子" />
            <TextBox IsReadOnly="{Binding IsInputRandomSeed, Converter={StaticResource BoolInverter}}" Text="{Binding RandomSeed, Mode=TwoWay}" />
            <ui:ToggleSwitch
                Margin="4,0,0,0"
                IsOn="{Binding IsInputRandomSeed}"
                OffContent="随机生成"
                OnContent="手动指定" />
        </StackPanel>

        <Button
            Grid.Row="3"
            HorizontalAlignment="Center"
            Command="{Binding GenerateRandomizerMapCommand}"
            Content="生成" />
    </Grid>
</Window>
